<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/darkColor"
    android:layout_marginRight="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="25dp"
    app:cardElevation="10dp"


    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:backgroundTintMode="screen"
        android:layout_margin="10dp"
        android:layout_marginRight="25dp"
        android:background="@color/darkColor"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@color/coursesbg"
            android:orientation="horizontal"
            android:paddingBottom="5dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="3dp"

            android:paddingTop="15dp">

            <ImageView
                android:id="@+id/courseIcon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="@dimen/text_margin"
                android:background="@color/coursesbg"
                android:src="@drawable/ic_developer" />

            <TextView
                android:id="@+id/courseTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/text_margin"
                android:background="@color/colorPrimaryDark"

                android:fontFamily="@font/cairo_semi_bold"
                android:text="Courses"
                android:textColor="@color/darkColor"
                android:textSize="20dp" />


        </LinearLayout>

        <TextView
            android:id="@+id/courseDescription"
            android:layout_width="match_parent"
            android:layout_height="363dp"
            android:layout_gravity="center_horizontal"

            android:layout_margin="10dp"
            android:layout_marginTop="4dp"
            android:background="@color/white"
            android:fontFamily="@string/bold"
            android:padding="15dp"
            android:shadowRadius="@integer/config_navAnimTime"
            android:text="@string/about_clg"

            android:textColor="@color/textColor"

            android:textSize="@dimen/text_size"
            android:textStyle="bold" />
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>