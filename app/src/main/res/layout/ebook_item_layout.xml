<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_margin="5dp"
    app:cardElevation="5dp">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="54dp"
            android:layout_height="match_parent"
            android:layout_margin="8dp"

            android:layout_weight="0.5"
            android:src="@drawable/ic_document"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="18dp" />


        <TextView
            android:id="@+id/eBook_name"
            android:layout_width="245dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:fontFamily="@string/regular"
            android:gravity="center"
            android:text="This is the Document "
            android:textColor="@color/textColor"
            android:textSize="22sp"
            app:layout_constraintBottom_toBottomOf="@+id/ebook_download"
            tools:layout_editor_absoluteX="81dp" />

        <ImageView
            android:id="@+id/ebook_download"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="8dp"
            android:layout_toRightOf="@id/eBook_name"
            android:layout_weight="0.5"

            android:src="@drawable/ic_download"
            tools:layout_editor_absoluteX="336dp"
            tools:layout_editor_absoluteY="18dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:fontFamily="@string/regular"
            android:gravity="center_vertical"
            android:text="Uploaded On  "
            android:textColor="@color/textColor"
            android:textSize="14sp"
            tools:layout_editor_absoluteX="62dp"
            tools:layout_editor_absoluteY="78dp" />


        <ImageView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:fontFamily="@string/regular"
            android:src="@drawable/ic_baseline_date_range_24"
            android:gravity="center_vertical"
            tools:layout_editor_absoluteX="165dp"
            tools:layout_editor_absoluteY="78dp" />

        <TextView
            android:id="@+id/ebook_date"
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:fontFamily="@string/regular"
            android:gravity="center_vertical"
            android:text="13-mar-1999 "
            android:textColor="@color/textColor"
            android:textSize="14sp"
            tools:layout_editor_absoluteX="200dp"
            tools:layout_editor_absoluteY="78dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:gravity="center"
            android:src="@drawable/ic_baseline_access_time_24"
            tools:layout_editor_absoluteX="287dp"
            tools:layout_editor_absoluteY="78dp" />

        <TextView
            android:id="@+id/ebook_time"
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:fontFamily="@string/regular"
            android:gravity="center"
            android:text="12:00"
            android:textColor="@color/textColor"
            android:textSize="14sp"
            tools:layout_editor_absoluteX="311dp"
            tools:layout_editor_absoluteY="80dp" />


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>