<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraint"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey2"
    tools:context=".DeveloperActivity">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/myPht"
        android:layout_width="160dp"
        android:layout_height="144dp"
        android:layout_gravity="center_vertical"
        android:src="@drawable/kp"
        app:layout_constraintBottom_toTopOf="@+id/clgNameApp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.778" />

    <TextView
        android:id="@+id/version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="monospace"
        android:text="v1.0.0"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/clgNameApp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/clgNameApp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="320dp"
        android:fontFamily="cursive"
        android:text="Gbpiet College App"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/developer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:fontFamily="cursive"
        android:text="Designed and Developed by Krishna Pant"
        android:textColor="@color/black"
        android:textSize="22dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/clgNameApp"
        app:layout_constraintVertical_bias="0.0" />


    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="85dp"
        android:layout_height="215dp"
        android:orientation="vertical"
        android:padding="20dp"
        android:paddingTop="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/developer"
        app:layout_constraintHorizontal_bias="0.401"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/developer">

        <ImageView
            android:id="@+id/Instagram"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginBottom="20dp"
            android:src="@drawable/instagram"
            app:layout_constraintBottom_toBottomOf="@+id/instagram"
            app:layout_constraintTop_toTopOf="@+id/instagram"
            tools:layout_editor_absoluteX="109dp" />

        <ImageView
            android:id="@+id/linkedinImage"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginBottom="20dp"
            android:src="@drawable/linkedin"
            app:layout_constraintBottom_toBottomOf="@+id/linkedIn"
            app:layout_constraintEnd_toEndOf="@+id/githubImage"
            app:layout_constraintStart_toStartOf="@+id/githubImage"
            app:layout_constraintTop_toTopOf="@+id/linkedIn" />

        <ImageView
            android:id="@+id/githubImage"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/github"
            app:layout_constraintBottom_toBottomOf="@+id/github"
            app:layout_constraintEnd_toEndOf="@+id/Instagram"
            app:layout_constraintStart_toStartOf="@+id/Instagram"
            app:layout_constraintTop_toTopOf="@+id/github" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.63"
        app:layout_constraintStart_toStartOf="@+id/developer"
        app:layout_constraintTop_toBottomOf="@+id/developer"
        app:layout_constraintVertical_bias="0.468">


        <TextView
            android:id="@+id/instagram"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:fontFamily="@font/berkshire_swash"
            android:text="Instagram"
            android:textColor="@color/ForgetPassword"
            android:textSize="18sp"
            tools:layout_editor_absoluteX="200dp"
            android:autoLink="web"
            tools:layout_editor_absoluteY="438dp" />

        <TextView
            android:id="@+id/linkedIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:fontFamily="@font/berkshire_swash"
            android:text="LinkedIn"
            android:textColor="@color/Linkedin"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="@+id/github"
            app:layout_constraintStart_toStartOf="@+id/github"
            tools:layout_editor_absoluteY="526dp" />


        <TextView
            android:id="@+id/github"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:fontFamily="@font/berkshire_swash"
            android:text="GitHub"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="@+id/instagram"
            app:layout_constraintStart_toStartOf="@+id/instagram"
            tools:layout_editor_absoluteY="484dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/rights"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="172dp"
        android:text="@string/rights"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.517"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linkedIn"
        tools:ignore="NotSibling" />


</androidx.constraintlayout.widget.ConstraintLayout>